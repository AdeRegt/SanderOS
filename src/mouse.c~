#include <system.h>
void mouselib_int_wait_0();
void mouselib_int_wait_1();

void setup_mouse(){
	mouselib_int_wait_1();
}

void mouselib_int_wait_0(){
	while(1){
		if(inportb(0x64)&0){
			break;
		}
	}
}

void mouselib_int_wait_1(){
	mov cx, 65000
	mov dx, 0x64
.wait:
	in al, dx
	bt ax, 1
	jnc .okay
	loop .wait
.okay:
}
